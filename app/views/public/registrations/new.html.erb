<div class= "container">
  <div class= "row my-3 py-2">
    <div class= "col-12 my-3">
      <h2 class= "text-center font-weight-bold">新規会員登録</h2>
      <p class= "alart text-center"><%= flash[:notice] %></p>
    </div>

    <div class= "col-12 form-group d-flex justify-content-center">
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
      
        <table class="field">
          <tbody>
            <tr>
              <td>お名前</td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "姓", class: "form-control mb-2" %></td>
              <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "名", class: "form-control mb-2 mx-4" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "セイ", class: "form-control mb-2" %></td>
              <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "メイ", class: "form-control mb-2 mx-4" %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "123-4567", class: "form-control mb-2" %></td>
              <td></td>
            </tr>
            <tr>
              <td>住所</td>
              <td></td>
            </tr>
            <tr>
              <td colspan="2"><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control mb-2" %></td>
              <td></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "080-1234-5678", class: "form-control mb-2" %></td>
              <td></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td></td>
            </tr>
            <tr>
              <td colspan="2"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "abc@test.com", class: "form-control mb-2" %></td>
              <td></td>
            </tr>
            <tr>
              <td>パスワード（6文字以上）</td>
              <td></td>
            </tr>
            <tr>
              <td colspan="2"><%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-3" %></td>
              <td></td>
            </tr>
            <tr class="actions mb-2 text-center">
              <td colspan="2"><%= f.submit "新規登録", class: "btn btn-dark px-5 mb-2" %></td>
              <td></td>
            </tr>
            <!--<tr class="actions mb-2 text-center">-->
            <!--  <td colspan="2">< %= link_to "ゲストログイン", customers_guest_sign_in_path, method: :post, class: "rink-button btn btn-dark px-4" %></td>-->
            <!--  <td></td>-->
            <!--</tr>-->
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
