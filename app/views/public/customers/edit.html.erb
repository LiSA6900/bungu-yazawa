<div class= "container">
  <div class= "row my-5 py-2">
    <div class=  "col-12 my-3">
      <h2 class="text-center font-weight-bold">【 会員情報編集 】</h2>
      <p class="alart text-center"><%= flash[:alart] %></p>
    </div>

    <div class= "col-12 form-group d-flex justify-content-center">
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <table class="field">
          <tbody>
            <tr>
              <td>お名前</td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.text_field :last_name, class: "form-control mb-2" %></td>
              <td><%= f.text_field :first_name, class: "form-control mb-2 mx-4" %></td>
            </tr>
            <tr>
              <td>フリガナ <span class="required">※全角カタカナ</span></td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.text_field :last_name_kana, class: "form-control mb-2" %></td>
              <td><%= f.text_field :first_name_kana, class: "form-control mb-2 mx-4" %></td>
            </tr>
            <tr>
              <td>郵便番号 <span class="required">※半角数字(ハイフンなし)</span></td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.text_field :postal_code, class: "form-control mb-2" %></td>
              <td></td>
            </tr>
            <tr>
              <td>住所</td>
              <td></td>
            </tr>
            <tr>
              <td colspan="2"><%= f.text_field :address, class: "form-control mb-2" %></td>
              <td></td>
            </tr>
            <tr>
              <td>電話番号 <span class="required">※半角数字(ハイフンなし)</span></td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.text_field :telephone_number, class: "form-control mb-2" %></td>
              <td></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td></td>
            </tr>
            <tr>
              <td colspan="2"><%= f.email_field :email, class: "form-control mb-4" %></td>
              <td></td>
            </tr>
            <tr class="actions mb-4 text-center">
              <td><%= f.submit "編集内容を保存する", class: "btn btn-info px-4" %></td>
              <td><%= link_to "退会する", customers_unsubscribe_path,class: "btn btn-danger px-4" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>