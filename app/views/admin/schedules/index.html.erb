<div class="container">
<div class="row mx-auto mb-5">
  <div class="col-4 mx-auto">
    <%= render '/admin/shared/schedule', schedules: Schedule.all, schedule: Schedule.new, today_schedules: Schedule.where(created_at: Time.zone.now.all_day) %>
  </div>
  
  <br>
  
  <br>
  <div class="col-8 mx-auto">
    <%= month_calendar events: @schedules do |date, schedules| %>
      <%= date.day %>
    
      <% schedules.each do |schedule| %>
        <div>
          <%= link_to schedule.title, admin_schedule_path(schedule.id) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
</div>

