<div class="container">
<div class="row mx-auto mb-5 my-5">
  
  <div class="col-4 mx-auto">
    <%= render '/admin/shared/schedule', schedules: Schedule.all, schedule: Schedule.new %>
  </div>

  <div class="col-6 mx-auto">
    <h3 class="ml-5 pl-5 mb-4"><strong>スケジュール編集</strong></h3>
    
    <%= form_with model: @schedule, url: admin_schedule_path, local: true do |f| %>
    
      <div class="title mb-3">
        <div class="form-tag">タイトル</div>
        <%= f.text_field :title, class: "form-control", style: "width:90%" %>
      </div>
    
      <div class="content mb-3">
        <div class="form-tag">内容</div>
        <%= f.text_field :body, class: "form-control", style: "width:90%" %>
      </div>
    
        <div class="time mb-4">
        <div class="form-tag">時間</div>
        <%= f.datetime_select :start_time %>
      </div>
    
      <div class="submit text-center">
        <%= f.submit "編集内容を保存する", class: "btn btn-info px-5 mb-5" %>
      </div>
    
    <% end %>
  </div>
</div>
</div>