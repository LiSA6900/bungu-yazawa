<div class="container">
  <div class= "row mb-5 mt-4">
    
  <div class="col-4 mx-auto">
    <%= render '/admin/shared/schedule', schedules: Schedule.all, schedule: Schedule.new, today_schedules: Schedule.where(created_at: Time.zone.now.all_day)  %>
  </div>

    <div class= "col-8 my-3">
      <h2 class="text-center font-weight-bold">【 会員情報編集 】</h2>
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
        <table class="mx-auto font-weight-bold">
          <tbody>
            <tr>
              <td class="my_page_item">会員ID</td>
              <td class="my_page_item"><%= @customer.id %></td>
            </tr>
            <tr>
              <td class="my_page_item">氏名</td>
              <td class="my_page_item"><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>
            <tr>
              <td class="my_page_item">フリガナ</td>
              <td class="my_page_item"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <td class="my_page_item">郵便番号</td>
              <td class="my_page_item">〒<%= @customer.postal_code %></td>
            </tr>
            <tr>
              <td class="my_page_item">住所</td>
              <td class="my_page_item"><%= @customer.address %></td>
            </tr>
            <tr>
              <td class="my_page_item">電話番号</td>
              <td class="my_page_item"><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <td class="my_page_item">メールアドレス</td>
              <td class="my_page_item"><%= @customer.email %></td>
            </tr>
            <tr>
              <td class="my_page_item">会員ステータス</td>
              <td class="my_page_item">
                  <%= f.radio_button :is_deleted, false %>
                  <%= f.label :is_deleted, "有効" %>
                  <span>　</span>
                  <%= f.radio_button :is_deleted, true %>
                  <%= f.label :is_deleted, "退会" %>
              </td>
            </tr>
            <tr class="main-form">
              <td></td>
              <td><%= f.submit "編集内容を保存する", class: "btn btn-info px-4" %></td>
            </tr>
          </tbody>  
        </table>
      <% end %>
    </div>
  </div>
</div>